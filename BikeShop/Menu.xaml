<Page x:Class="BikeShop.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BikeShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <StackPanel>
        <Grid Margin="10 150 10 0" Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Margin="10" Content="Products"/>
            <Button x:Name="LiveSupportButton" Grid.Column="1" Margin="10" Content="Live Support" Click="LiveSupportButton_Click"/>
            <Button x:Name="EmailSupportButton" Grid.Column="2" Margin="10" Content="Email Support" Click="EmailSupportButton_Click"/>
        </Grid>
        <TextBlock Text="Adventure Works" FontWeight="Bold" FontStyle="Italic" FontSize="30" Padding="80 30 0 0"/>
    </StackPanel>
</Page>
